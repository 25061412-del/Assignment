import java.util.Scanner;
public class FOP {
    public static void main(String[] args) {
        Scanner receivedNumber=new Scanner(System.in);
        System.out.println("---UniVerse---");
        System.out.println("Enter your username:");
        String name=receivedNumber.nextLine();
        boolean Valid=true;
        if (name.isEmpty()){
            System.out.println("Invalid name");
            Valid=false;}
            if (Valid){
                int length=name.length();
                if (length<5||length>15){
                    Valid=false;
                }
            }
        if (Valid) {
            char firstChar = name.charAt(0);
            if (!(firstChar >= 'a' && firstChar <= 'z')) {
                Valid = false;
            }
        }
            int length = name.length();
            for (int i = 1; i < length; i++) {
                char Char = name.charAt(i);
                boolean Letter=(Char>='a'&&Char<='z');
                boolean Digit=(Char>='0'&&Char<='9');
                boolean Underscore=(Char=='_');
                if (Letter||Digit||Underscore){
                    continue;}
                else {Valid=false;
                    break;
                }
            }
            if (!Valid){
                System.out.println("Invalid name");
            return;
            }
        System.out.println("Enter password:");
            String password=receivedNumber.nextLine();
            if (password.isEmpty()){
                Valid=false;
                System.out.println("Invalid password");
            }
        int rulesMet=0;
        boolean Uppercase = false;
        boolean Lowercase = false;
        boolean Digit = false;
        boolean SpecialChar = false;
        boolean Space = false;
        boolean MinLength = false;
        boolean UsernameCheck = false;
        if (password.length() >= 8) {
            MinLength = true;
        }
        if (password.contains(" ")) {
            Space = true;
        }
        String specialChars = "!@#$%^&*";
        for (int i = 0; i < password.length(); i++) {
            char ch = password.charAt(i);

            if (ch >= 'A' && ch <= 'Z') {
                Uppercase = true;
            } else if (ch >= 'a' && ch <= 'z') {
                Lowercase = true;
            } else if (ch >= '0' && ch <= '9') {
                Digit = true;
            } else if (specialChars.indexOf(ch) != -1) {
                SpecialChar = true;
            }
        }
        String passwordLower = password.toLowerCase();
        String usernameLower = name.toLowerCase();

        if (passwordLower.contains(usernameLower))
        {
            UsernameCheck = true;
        }
        if (MinLength)       { rulesMet++; }
        if (Uppercase)       { rulesMet++; }
        if (Lowercase)       { rulesMet++; }
        if (Digit)           { rulesMet++; }
        if (SpecialChar)     { rulesMet++; }
        if (!Space)          { rulesMet++; }
        if (!UsernameCheck)  { rulesMet++; }
        String rating;
        if (rulesMet == 7) {
            rating = "Very Strong";
        } else if (rulesMet == 6) {
            rating = "Strong";
        } else if (rulesMet >= 4) {
            rating = "Moderate";
        } else {
            rating = "Weak";
        }
        System.out.println("Password Strength: "+rating);
        }
}
